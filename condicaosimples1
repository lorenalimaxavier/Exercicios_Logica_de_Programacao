algoritmo "calculoidadecondicaosimples"
var
   ano, nasc, idade: inteiro
inicio
      Escreva ("Em que ano estamos?")
      Leia (ano)
      Escreva ("Em que ano vocÃª nasceu?")
      Leia (nasc)
      idade <- ano - nasc
       Escreva ("Em ", ano, " voce tera ", idade, " anos.")
