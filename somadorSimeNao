algoritmo "somadorSimeNao"
var
   cont, N, S: Inteiro
   resp: Caractere
inicio
      s <- 0
      resp <- "S"
      Repita
         Escreva("Digite o valor: ")
         Leia(N)
         S <- S + N
         Escreva("Voce quer continuar? [S/N] ")
         Leia(Resp)
      Ate(resp = "N")
      EscrevaL("A soma de todos os valores foi ", S)
fimalgoritmo
